<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator -->
        <domain includeSubdomains="true">192.168.1.1</domain> <!-- Local network - adjust to your IP -->
        <domain includeSubdomains="true">192.168.0.1</domain> <!-- Local network - adjust to your IP -->
    </domain-config>
    
    <!-- Production domains should use HTTPS -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>
